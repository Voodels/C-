  //Psuedocode 
//if input is between is while [0-9];[a,z];[A,Z];using ascii values 
#include<iostream>
using namespace std;
int main(){
  char inp;
  cout<<"Ã‹nter the value\n";
  cin>>inp;
  if((inp>=97)&&(inp<=122)){
    cout<<"inp is a lowercase";
  }else if ((inp>=48)&&(inp<=57)){
    cout<<"inp is among 0-9";
  }else if ((inp>=65)&&(inp<=90)){
    cout<<"inp is among uppercase letters";
  }
  
//cout<<int(inp)<<endl;
  return 0;
}
////While loops
///print n til 99
#include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"Enter the value of n"<<endl;
  
  cin>>n;
  
  int i = 1;
  
  while(i<=n){ 
  cout<<i<<endl;
  i = i+1;
  }
}
//While loops
///print n till 99 and sum them 
#include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"Enter the value of n"<<endl;
  
  cin>>n;
  int i = 1;
  int sum = 0;
  while(i<=n){
    sum = sum+i;
    i = i+1;
  }
  cout<<"Sum is : "<<sum<<endl;
  }
  
  
  ///to check if prime or not ;
  
  #include<iostream>
using namespace std;
int main(){
  int n;
  cout<<"The value of n is :";
  cin>>n;
  int i = 2;
  while (i<n){
    if((n%i)==0){
      cout<<"Not prime ";
     
    }
    i = i+1;
    }
  
}
