//greatest among 3 numbers input  

#include<iostream>
using namespace std;

int main(){
  int a,b,c;
  cout<<"Enter the value of a :"<<endl;
  cin>>a;
  cout<<"Enter the value of b :"<<endl;
  cin>>b;
  cout<<"Enter the value of c :"<<endl;
  cin>>c;
  if(a>b){
    if(a>c){
      cout<<"a is greatest "<<endl;
    }else{
      cout<<"c is greatest "<<endl;
    }
  }else{
    if(b>c){
    cout<<"B is greatest "<<endl;
    }else{
      cout<<"c is greatest "<<endl;
    }

  }
  return 0;
}
